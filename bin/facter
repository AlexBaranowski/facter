#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require 'open3'
require_relative '../config/config'
require_relative '../lib/cli'
require_relative '../lib/base'
require_relative '../lib/fact_loader'
require_relative '../lib/query_parser'
require_relative '../lib/models/loaded_fact'

os = :linux
require_relative "../lib/facts/#{os.to_s}/network_interface"
require_relative "../lib/facts/#{os.to_s}/network_ip"
require_relative "../lib/facts/#{os.to_s}/os/name"
require_relative "../lib/facts/#{os.to_s}/os/family"
require_relative "../lib/facts/#{os.to_s}/os/release"
require_relative "../lib/resolvers/base_resolver"
require_relative "../lib/resolvers/#{os.to_s}/os_resolver"


ARGV.unshift(Facter::Cli.default_task) unless
  Facter::Cli.all_tasks.key?(ARGV[0]) ||
  Facter::Cli.instance_variable_get(:@map).key?(ARGV[0])

Facter::Cli.start(ARGV)
