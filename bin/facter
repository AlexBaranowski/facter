#!/usr/bin/env ruby
# frozen_string_literal: true

require 'open3'
require 'json'
require 'thor'
require 'pry-byebug'

require './lib/resolvers/base_resolver'

def load_dir(*dirs)
  Dir.glob(File.join('./', dirs, '*.rb'), &method(:require))
end
load_dir(['config'])
load_dir(['lib'])

def load_lib_dirs(*dirs)
  # binding.pry
  load_dir(['lib', dirs])
end

load_lib_dirs('resolvers')
load_lib_dirs('utils')
load_lib_dirs('models')

os = OsDetector.detect_family

load_lib_dirs('facts', os.to_s, '**')

ARGV.unshift(Facter::Cli.default_task) unless
  Facter::Cli.all_tasks.key?(ARGV[0]) ||
  Facter::Cli.instance_variable_get(:@map).key?(ARGV[0])
Facter::Cli.start(ARGV)
